			#size-cells = <0>;
			pvddcrcpu0p1@64 {
				//PVDDCR_CPU0_VDDIO_MEM_S3_P1_CONTROLLER
				compatible = "mps,mp2856";
				reg = <0x64>;
			};
			pvddcrcpu1p1@65 {
				//PVDDCR_CPU1_PVDDCR_SOC_P1_CONTROLLER
				compatible = "mps,mp2856";
